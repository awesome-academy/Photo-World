<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/muoisau">

        <ImageView
            android:id="@+id/image_photo"
            android:layout_width="@dimen/khong"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tam"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/icon_user"
            android:layout_width="@dimen/bonmuoi"
            android:layout_height="@dimen/bonmuoi"
            android:layout_marginTop="@dimen/muoisau"
            app:layout_constraintBottom_toTopOf="@+id/icon_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_photo"
            app:srcCompat="@drawable/ic_person_black_24dp" />

        <ImageView
            android:id="@+id/icon_date"
            android:layout_width="@dimen/bonmuoi"
            android:layout_height="@dimen/bonmuoi"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/icon_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon_user"
            app:srcCompat="@drawable/ic_date_range_black_24dp" />

        <ImageView
            android:id="@+id/icon_content"
            android:layout_width="@dimen/bonmuoi"
            android:layout_height="@dimen/bonmuoi"
            android:layout_marginTop="@dimen/muoisau"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon_date"
            app:srcCompat="@drawable/ic_description_black_24dp" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/muoisau"
            android:layout_marginTop="@dimen/muoisau"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="@dimen/haibon"
            app:layout_constraintBottom_toTopOf="@+id/text_date"
            app:layout_constraintStart_toEndOf="@+id/icon_user"
            app:layout_constraintTop_toBottomOf="@+id/image_photo" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/muoisau"
            android:layout_marginTop="@dimen/haimuoi"
            android:text="Date"
            android:textColor="@android:color/black"
            android:textSize="@dimen/haibon"
            app:layout_constraintBottom_toTopOf="@+id/text_descrip"
            app:layout_constraintStart_toEndOf="@+id/icon_date"
            app:layout_constraintTop_toBottomOf="@+id/text_name" />

        <TextView
            android:id="@+id/text_descrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/muoisau"
            android:layout_marginTop="@dimen/haimuoi"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="@dimen/haibon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon_content"
            app:layout_constraintTop_toBottomOf="@+id/text_date" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
